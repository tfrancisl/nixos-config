{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start-branch-check.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/nix-fmt.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/auto-commit.sh",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
